
[alias]
 	st = status
  	co = commit
  	br = branch
  	ch = checkout
  	df = diff
	lg = log --pretty=format:'%h | %an | %ar | %s'
[core]
	excludesfile = ~/.gitignore_global
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan

