
[alias]
 	st = status
  	co = commit
  	br = branch
  	ch = checkout
  	df = diff
	lg = log --graph --pretty=format:'%C(green)%h%Creset %C(yellow)%d%Creset | %C(blue)%an%Creset | %C(red)%ar%Creset | %C(cyan)%s%Creset' 
[core]
	excludesfile = ~/.gitignore_global
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow
	frag = magenta
	old = red
	new = green
[color "status"]
	added = blue
	changed = green
	untracked = red
